<div style="overflow-y: scroll; height: 450px;" data-controller="chat">
  <%= turbo_frame_tag 'message_pagination', loading: :lazy, src: chat_messages_load_more_path(format: :turbo_stream) %>
  <div id="messageContainer">
    <% chat.messages.each do |message| %>
      <%= render 'message_list_item', message: message, user_id: current_user.id, should_scroll: false, acknowledge: false %>
    <% end %>
  </div>
</div>