<%= turbo_stream.append 'chatLinksContainer' do %>
  <%= render partial: 'link', collection: @paginated_result.data, as: :link_dto %>
<% end %>

<%= turbo_stream.replace 'link_pagination' do %>
  <% if @paginated_result.pagination.next.present? %>
    <%= turbo_frame_tag 'link_pagination',
                        loading: :lazy,
                        src: chat_links_path(format: :turbo_stream, page: @paginated_result.pagination.next),
                        autoscroll: false
    %>
  <% end %>
<% end %>