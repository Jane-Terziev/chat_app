<dialog class="right" id="chatImagesDrawer" style="max-width: 20%">
  <header>
    <nav style="gap: 0.25rem">
      <button class="transparent circle large" onclick="document.getElementById('chatImagesDrawer').close(); document.getElementById('chatSettingsDrawer').show();">
        <i>close</i>
      </button>
      <h6 class="max no-margin cut-text">Images</h6>
    </nav>
  </header>
  <div class="large-divider"></div>

  <%= turbo_frame_tag 'chat_images', loading: :lazy, src: chat_images_path(chat_id: params[:chat_id]) %>
</dialog>