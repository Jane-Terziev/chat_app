<%= turbo_stream.append 'chatImagesContainer' do %>
  <%= render partial: 'image', collection: @paginated_result.data, as: :file_dto %>
<% end %>

<%= turbo_stream.replace 'image_pagination' do %>
  <% if @paginated_result.pagination.next.present? %>
    <%= turbo_frame_tag 'image_pagination',
                        loading: :lazy,
                        src: chat_images_path(format: :turbo_stream, page: @paginated_result.pagination.next),
                        autoscroll: false
    %>
  <% end %>
<% end %>